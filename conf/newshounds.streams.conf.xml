<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
     
    <Storages>
    	<!-- Mongodb storage configuaration  -->
    	<Storage id="Mongodb">
    		<Parameter name="Classpath"><![CDATA[eu.socialsensor.sfc.streams.store.MongoDbStorage]]></Parameter>
    		<Parameter name="mongodb.host"><![CDATA[your.ip]]></Parameter>
    		<Parameter name="mongodb.database"><![CDATA[Streams]]></Parameter>
    		<Parameter name="mongodb.items.collection"><![CDATA[Items]]></Parameter>
    		<Parameter name="mongodb.mediaitems.collection"><![CDATA[MediaItems]]></Parameter>
    		<Parameter name="mongodb.streamusers.collection"><![CDATA[StreamUsers]]></Parameter>
    		<Parameter name="mongodb.webpages.collection"><![CDATA[WebPages]]></Parameter>
    		<Parameter name="mongodb.sources.collection"><![CDATA[Sources]]></Parameter>
    		
    		<!-- <Parameter name="politiciansFile"><![CDATA[]]></Parameter>
    		<Parameter name="journalistsFile"><![CDATA[]]></Parameter>
    		<Parameter name="celebritiesFile"><![CDATA[]]></Parameter>
    		<Parameter name="footballersFile"><![CDATA[]]></Parameter> -->
    		
    	</Storage>
    	
    	<!--  Solr storage configuaration -->
    	<Storage id="Solr">
    		<Parameter name="Classpath"><![CDATA[eu.socialsensor.sfc.streams.store.SolrStorage]]></Parameter>
    		<Parameter name="solr.hostname"><![CDATA[http://your.ip:8080]]></Parameter>
    		<Parameter name="solr.service"><![CDATA[solr]]></Parameter>
    		<Parameter name="solr.topicDetectionItems.collection"><![CDATA[Items]]></Parameter>
    		<!--  <Parameter name="solr.mediaitems.collection"><![CDATA[MediaItems]]></Parameter>-->
    	</Storage>
    	
    
    </Storages>
	
	<Subscribers>
		<Subscriber id ="Twitter">
			<Parameter name="Classpath">
				<![CDATA[eu.socialsensor.framework.streams.twitter.TwitterStream]]>
			</Parameter>
            <Parameter name="Key">
				<![CDATA[your.key]]>
			</Parameter>
	        <Parameter name="Secret">
	        	<![CDATA[your.secret.key]]>
	       	</Parameter>
        	<Parameter name="AccessToken">
	        	<![CDATA[your.accesstoken]]>
	       	</Parameter>
        	<Parameter name="AccessTokenSecret">
	        	<![CDATA[your.secret.accesstoken]]>
	       	</Parameter>
	       	<Parameter name="keywords">
	        	<![CDATA[keyword.of.search]]>
	      	</Parameter>
	      	<Parameter name="follows">
	        	<![CDATA[user.to.follow]]>
	      	</Parameter>
	      	<Parameter name="locations">
	        	<![CDATA[location.of.relevance]]>
	      	</Parameter>
		</Subscriber>
	</Subscribers>
	
